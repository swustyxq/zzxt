	<div class="container theme-showcase">
		<div class="col-md-12">
			<div class="col-md-12">

				<div class="page-header">
					<small><span class="glyphicon glyphicon-home"></span>&nbsp;&nbsp;&nbsp;&nbsp;当前位置导航：&nbsp;&nbsp;&nbsp;&nbsp;
						<span id="location"> <a href="#">首页</a>&gt;<a href="#">使用说明</a>&gt;<a
							href="#">学生信息</a>
					</span> </small>
				</div>
			</div>


			<!-- 左侧导航栏    -->
			<div class="col-md-3">
				<div class="bs-example">
					<div id="navigation" class="panel-group"></div>
				</div>
			</div>
			<div class="col-md-9">
				<div class="bs-Shaozhou">
					<!-- <h3>查看贫困生入库状态</h3> -->
					<div>
						<div>
							<h2 align="center">高等学校家庭经济困难学生认定申请表</h2>
							<table>
								<tr>
									<td width="90px">学院：</td>
									<td width="155px" id="inputDescription"></td>
									<td width="90px">专业班级：</td>
									<td width="155px" id="inputClassname"></td>
									<td width="90px">学号：</td>
									<td width="155px" id="inputStudentNumber"></td>
								</tr>
							</table>
							<table class="table table-striped table-bordered" id="pksgTable">
								<tr height="40px">
									<th rowspan="4" width="10px">学生本人基本情况</th>
									<td width="100px">姓 名</td> 
									<td id="inputName"></td>
									<td>性 别</td>
									<td id="inputSex"></td>
									<td width="80px">出生年月</td>
									<td id="inputBirthYearAndMonth"></td>
									<td>民 族</td>
									<td id="inputNation">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
								</tr>
								<tr height="40px">
									<td>身份证号码</td>
									<td colspan="2" id="inputStudentIDNumber"></td>
									<td>政治面貌</td>
									<td id="inputPoliticstate"></td>
									<td>家庭人均年收入</td>
									<td colspan="2" id="inputAllIncomePerYear"><input
										type="text" id="AllIncomePerYear" class="form-control"></input></td>
								</tr>
								<tr height="40px">
									<td>家庭详细住址</td>
									<td colspan="3" id="inputAreadeatilhome"></td>
									<td>邮政编码</td>
									<td colspan="1" id="inputMailcode"></td>
									<td>家庭人数</td>
									<td id="studPopuNum"></td>
								</tr>
								<tr height="40px">
									<td>是否残疾</td>
									<td><input id="yes1" type="radio" name="isDisable"
										value="1">是 <input id="no1" type="radio"
										name="isDisable" value="0">否</td>
									<td>移动电话</td>
									<td id="inputPhone"></td>
									<td>Email：</td>
									<td id="inputEmail"></td>
									<td>QQ：</td>
									<td id="inputQq"></td>
								</tr>
								<tr>
									<th width="10px">学生陈述申请认定理由</th>
									<td colspan="8"><div align="right">
											<textarea rows=10 id="applyReason" style="width:100%"></textarea>
											<!-- <p align="left" style="display: inline">
												学生签字：<input type="text">
											</p>
											<p style="display: inline">
												<input type="text"
													style="width: 50px; border: 0; border-bottom: 1px solid black; border-color: #000000;" />年
												<input type="text"
													style="width: 25px; border: 0; border-bottom: 1px solid black; border-color: #000000;" />
												月 <input type="text"
													style="width: 25px; border: 0; border-bottom: 1px solid black; border-color: #000000;" />
												日
											</p> -->
										</div></td>
								</tr>
								<!-- 民主评议对学生不显示 -->
								<tr>
									<th rowspan="4">民主评议</th>
									<td rowspan="4">推荐档次</td>
									<td style="text_align: center"><input type="radio"
										name="pkLevel" value="家庭经济一般困难" />A.家庭经济一般困难</td>
									<td rowspan="4">陈述理由</td>
									<td colspan="5" rowspan="4"><div>
											<textarea id="reason" rows=10 style="width:100%"></textarea>
										</div> <!-- <p align="left" style="display: inline">
											评议小组组长签字：<input type="text"
												style="width: 50px; border: 0; border-bottom: 1px solid black; border-color: #000000;" />
										</p>
										<p align="right" style="display: inline">
											<input type="text"
												style="width: 40px; border: 0; border-bottom: 1px solid black; border-color: #000000;" />
											年 <input type="text"
												style="width: 20px; border: 0; border-bottom: 1px solid black; border-color: #000000;" />
											月 <input type="text"
												style="width: 20px; border: 0; border-bottom: 1px solid black; border-color: #000000;" />
											日
										</p> --></td>
								</tr>
								<tr>
									<td><input type="radio" name="pkLevel" value="家庭经济困难" />B.家庭经济困难</td>
								</tr>
								<tr>
									<td><input type="radio" name="pkLevel" value="家庭经济特殊困难" />C.家庭经济特殊困难</td>
								</tr>
								<tr>
									<td><input type="radio" name="pkLevel" value="家庭经济不困难" />D.家庭经济不困难</td>
								</tr>
								<!-- 认定决定对辅导员和学生都不显示 -->
								<tr id="institutionopinion" style="display: none">
									<th>学院意见</th>
									<td colspan="8">
										<div align="left">经评议小组推荐、本院认真审核后：</div>
										<div align="left">
											<input type="radio" name="ok" value="1" />同意评议小组意见。
										</div>
										<div align="left">
											<div>
												<input type="radio" name="ok" value="0" />不同意评议小组意见。调整为 <input
													type="text" id="final"  placeholder="如：家庭经济不困难"
													style="width: 150px; border: 0; border-bottom: 1px solid black; border-color: #000000;"
													disabled="disabled">。
											</div>
										</div>
									</td>
								</tr>
							</table>
							<!-- 提示 -->
							<div class=" control-label" align="left" id="tip01"
								style="display: none">
								<font color="red">请补全所有信息</font>
							</div>
							<div align="center">
								<button id="save" type="button" class="btn btn-primary">保存</button>
								<button id="submitPk" type="button" class="btn btn-success">审核通过</button>
								<button id="back" type="button" class="btn btn-danger">驳回</button>
								<button type="button" class="btn btn-info"
									onclick="javascript: location.replace(document.referrer);">
									<span class="glyphicon glyphicon-arrow-left"></span> 返回
								</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- 修改密码的模态对话框 Modal -->
		<div class="modal fade" id="changePassword" tabindex="-1"
			role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal">
							<span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
						</button>
						<h4 class="modal-title">修改用户密码</h4>
					</div>
					<div class="modal-body">
						<!-- 对话框里面的内容   -->
						<form class="form-horizontal" role="form">
							<div class="form-group">
								<label for="inputEmail3" class="col-sm-4 control-label">当前密码：</label>
								<div class="col-sm-6">
									<input type="password" class="form-control" id="inputPassword1"
										placeholder="原始密码">
								</div>
							</div>
							<div class="form-group">
								<label for="inputPassword3" class="col-sm-4 control-label">新密码：</label>
								<div class="col-sm-6">
									<input type="password" class="form-control" id="inputPassword2"
										placeholder="新密码">
								</div>
							</div>
							<div class="form-group">
								<label for="inputPassword3" class="col-sm-4 control-label">再次输入新密码：</label>
								<div class="col-sm-6">
									<input type="password" class="form-control" id="inputPassword3"
										placeholder="重复新密码">
								</div>
							</div>
						</form>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
						<button Id="changePWD" type="button" class="btn btn-primary">保存</button>
					</div>
				</div>
			</div>
		</div>
	</div>


	<footer class="bs-footer" role="contentinfo">
		<p class="pull-right">
			<a href="#">回到页面顶部</a>
		</p>
		<div class="container" id="copyright"></div>
	</footer>
</body>
